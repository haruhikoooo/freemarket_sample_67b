.all
  .all__contents
    = form_with model:@good, local:true do |f|
      .header
        .header__inner
          = link_to  root_path, class: "title-logo" do
            = image_tag("logo/logo.png", alt: "FURIMA", width: "140")
      .contents1all
        .contents1all__inner
          .contents1top
            %label.contents1top__left 出品画像
            %span.contents1top__right 必須
          %p.contents1center
            最大10枚までアップロードできます
          .camera
            #image-box
              = f.fields_for :images do |image|
                .js-file_group{data: {index: image.index}}
                  %label
                    = image.file_field :image, style: "display:none", class: "js-file"
                    %i.fas.fa-camera.fa-2x
                    %p.camera__comments
                      %br/
                      ドラッグアンドドロップ
                      %br/ 
                      またはクリックしてファイルをアップロード
      .contents2-all
        .contents2
          .contents2__productsname-a
            .contents2__productsname-b
              %div{name: "name"}
                .contents2__productsnameblock
                  %label 商品名
                  %span.contents2__productsnamehissu 必須
              .contents2__productsname40box
                .contents2__productsname40boxin
                  %input{autocomplete: "off", name: "name", placeholder: "40文字まで", style: "width:585px; height: 46px; padding-left: 5px; padding: 0 16px;", type: "text", value: ""}/
          .contents2-description-all
            .contents2-description
              %div{name: "description"}
                .description-a
                  %label 商品の説明
                  %span.description-b 必須
              .cnt_area
              %textarea.contents2-description-example{name: "description", class:"sample", placeholder: "商品の説明（必須 1,000文字以内）\n  （色、素材、重さ、定価、注意点など）\n\n  例）2010年頃に1万円で購入したジャケットです。ライトグレー\n  で傷はありません。あわせやすいのでおすすめです。  ", rows: "7"}
              .thousand
                %span.now_cnt 0
                \/ 
                /
                1000
        %hr.contents3-line/
        .contents3-all
          %p.contents3-details 商品の詳細
          .contents3-category-all
            .contents3a-category-in
              %div{name: "categoryid"}
                .contents3-categoryid-in
                  %label カテゴリー
                  %span.contents3-category-redbtn 必須
              -# .contents3-choice-a
              -#   .contents3-choice-b
              -#     = f.select :category, @category_parent_array, {prompt: "選択して下さい"}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
              -#   .pulldown.contents3-choice-c#children_box
              -#   .pulldown.contents3-choice-d#grandchildren_box
              .listing-form-box
                .listing-product-detail__category
                  -# = f.label 'カテゴリー', class: 'listing-default__label'
                  -# %span.listing-default--require 必須
                  .listing-select-wrapper
                    .listing-select-wrapper__box
                      = f.select :category, @category_parent_array, {}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
                    .pulldown.contents3-choice-c#children_box
                    .pulldown.contents3-choice-d#grandchildren_box
          .brand-all
            .brand-in
              .brand-box
                %label ブランド
                %span.brand-box__1 任意
              .brand-examples
                .brand-examples__1
                  %input{autocomplete: "off", name: "brandname", placeholder: "例）シャネル", style: "width:585px; height:40px; padding: 0 16px;", type: "text", value: ""}/
              %ul.threea1__6
                %ul
          .threebottom-status-all
            .threebottom-status-in
              .threebottom-goods-status
                .threebottom-goods-status__1
                  %label 商品の状態
                  %span.threebottom-goods-status__2 必須
              .threebottom1__box1
                .threebottom1__box2
                  = f.collection_select :condition_id, Condition.all, :id, :name, {prompt: "選択して下さい"}, {class: 'form-control'}
        %hr.line-line/
        .four-all
          %p.delivery-fee
            配送について
            %a{href: "/jp/help_center/article/68/", rel: "noopener noreferrer", target: "_blank"}
              %svg.four-delivery__1{"aria-hidden": "true", fill: "#222222", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
