%header.user_registration__header
  %h1.user_registration__header__logo
    = link_to root_path do
      = image_tag "logo/logo.svg"
%main.user_registration__main
  .user_registration__main__form
    %h2.user_registration__main__form__title 会員情報入力
    = form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'user_registration__main__form__contents'}) do |f|
      .user_registration__main__form__contents__field
        = f.label :nickname, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        = f.text_field :email, autofocus: true, placeholder: "例）フリマ太郎", class:"user_registration__main__form__contents__field__input--one"
      .user_registration__main__form__contents__field
        = f.label :email, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class:"user_registration__main__form__contents__field__input--one"
      .user_registration__main__form__contents__field
        = f.label :password, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        = f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上の半角英数字", class:"user_registration__main__form__contents__field__input--one"
      .user_registration__main__form__contents__field--middle
        = f.label :password_confirmation, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        = f.password_field :password_confirmation, placeholder: "", class:"user_registration__main__form__contents__field__input--one"
        %p.user_registration__main__form__contents__field__notice-gray ※ 英字と数字の両方を含めて設定してください
      .user_registration__main__form__contents__field
        %p.user_registration__main__form__contents__field__notice-title 本人確認
        %p.user_registration__main__form__contents__field__notice-text 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
      .user_registration__main__form__contents__field
        = f.label :name, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        .user_registration__main__form__contents__field__input
          = f.text_field :email, autocomplete: "new-password", placeholder: "例）不離間", class:"user_registration__main__form__contents__field__input--two"
          = f.text_field :email, autocomplete: "new-password", placeholder: "例）太郎", class:"user_registration__main__form__contents__field__input--two"
      .user_registration__main__form__contents__field
        = f.label :furigana, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        .user_registration__main__form__contents__field__input
          = f.text_field :email, autocomplete: "new-password", placeholder: "例）フリマ", class:"user_registration__main__form__contents__field__input--two"
          = f.text_field :email, autocomplete: "new-password", placeholder: "例）タロウ", class:"user_registration__main__form__contents__field__input--two"
      .user_registration__main__form__contents__field--long
        = f.label :birth_day, class:"user_registration__main__form__contents__field__label"
        %span.user_registration__main__form__contents__field__require 必須
        %br/
        != sprintf(f.date_select(:birth_day, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 0), default: Date.new(1989, 1, 1),with_css_classes:"",date_separator:'%s'),'年','月')+'日'
        %p.user_registration__main__form__contents__field__notice-gray ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
      -# 機能実装後は以下のlink_toメソッドは削除します。
      .user_registration__main__form__contents__submit
        =link_to users_step2_path,method: :get do 
          = f.submit "次へ進む",class:"user_registration__main__form__contents__submit__btn"  
%footer.user_registration__footer
  .user_registration__footer__contents
