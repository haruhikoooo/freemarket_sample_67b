%header.user_registration__header
  %h1.user_registration__header__logo
    = link_to "#" do
      = image_tag "logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"
%main.user_registration__main
  %h2.user_registration__main__title 会員情報入力
  .user_registration__main__form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .user_registration__main__form__field
      = f.label :birth_day, class:"user_registration__main__form__field__label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "入力", class:"user_registration__main__form__field__input--long"
    .user_registration__main__form__field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in"
  = render "devise/shared/links"
